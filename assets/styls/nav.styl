.country-list
    background #fff
    border-radius 16px
    box-shadow: rgba(255, 255, 255, 0.1) 0px 1px 1px 0px inset, rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;
    display grid
    gap 10px
    grid-template-columns repeat(auto-fill, minmax(100px, 1fr) )
    justify-content space-between
    height fit-content
    max-height 0
    list-style none
    margin auto
    margin-top -800px
    overflow hidden
    max-width 780px //1080px
    padding 0 //20px
    position absolute
    top 20px
    left 50%
    transform translateX(-50%)
    transition all .4s ease-in-out
    width 100%
    z-index 2

    span 
        border-radius 4px
        background #f0f0f0
        display inline-block
        font-size 16px
        margin 4px
        padding 4px 8px
        text-align center
        a 
            color alpha
            font-size 16px
            padding 0 //4px
            text-decoration none
            &:hover 
                color red
button.open-country-dropdown 
    color alpha
    display flex 
    flex-direction: column 
    font-size 20px
    //gap 6px
