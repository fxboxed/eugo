.country-list.show-country-list 
    height initial //400px // auto //fit-content
    max-height fit-content
    margin-top 0
    padding 24px
    transition all .8s ease-in-out

.country-list button 
    background alpha //var(--alpha)
    color var(--light)
    grid-column 1 / -1
    height 32px 
    margin 20px auto
    width 100px 
