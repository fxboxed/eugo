.navbar 
    //background alpha + (80%)// light
    display flex 
    align-items center
    gap 16px
    justify-content space-between
    height 80px
    //margin-bottom 24px
    padding 0 10px
    position fixed
    top 0
    width 100%
    a  
        color gamma - (80)//alpha
        display inline-block
        font-size 1.2rem
        font-weight 500
        text-transform uppercase
        padding 20px 10px
        //border-radius 5px
        transition all 0.3s
        &:hover
            background alpha
            color light
            transition all 0.3s
.country-list
    //background #fff
    border-radius 16px
    background: rgba(0, 0, 0, 0.1);
    -webkit-backdrop-filter: blur(15px);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.25);
    display grid
    gap 10px
    grid-template-columns repeat(auto-fill, minmax(100px, 1fr) )
    justify-content space-between
    height fit-content
    max-height 0
    list-style none
    margin auto
    margin-top -800px
    overflow hidden
    max-width 780px //1080px
    padding 0 //20px
    position absolute
    top 0 //20px
    left 50%
    transform translateX(-50%)
    //transform scale(0)
    transition all .4s ease-in-out
    width 100%
    z-index 10

    span 
        border-radius 4px
        background #f0f0f0
        display inline-block
        font-size 16px
        margin 4px
        padding 4px 8px
        text-align center
    a 
        background gamma - (40) //alpha
        border 2px solid gamma - (30%)
        color light
        font-size 16px
        padding 4px
        text-align: center
        text-decoration none


button.open-country-dropdown 
    color gamma - (80)
    cursor pointer
    display flex 
    flex-direction: column 
    font-size 20px
    //gap 6px
    position absolute
    top 30px
    left 50%
    transform translateX(-50%)
    z-index 10
    span 
        //background light
        border-radius 50%
        font-size 24px
        line-height .5
        margin -10px auto
        padding  16px
        text-align center
        transform rotate(90deg)
        z-index -1
//open-country-dropdown when btn is clicked
.country-list.show-country-list 
    height initial //400px // auto //fit-content
    max-height fit-content
    margin-left auto
    margin-top 0
    padding 24px

    //top 40px
    //left 50%
    transform translateX(-50%)
    //transform scale(1)
    transition all .8s ease-in-out
    //width 400px

