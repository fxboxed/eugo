    font-style italic
    margin 20px auto 100px
    width 90%
li
    list-style none

.holy-grail 
    ol
        perspective 200px
        position relative
    li 
        background linear-gradient(90deg, light + (20%), rgba(light, .2))
        box-shadow: rgba(light, 0.25) 0px 30px 60px -12px inset, rgba(light - (20%), .6) 0px 18px 36px -18px 
        color alpha - (80%)
        padding 12px 
        transform: rotateY(-2deg);
        width 90%

.holy-grail 
    ul 
        li 
            background light - 10 // rgba(light, .4)// gamma + (80%)
            border-radius 19px 8px 8px 19px
            //box-shadow: rgba(gamma, 0.25) 0px 30px 60px -12px inset, rgba(gamma - (60%), .6) 0px 18px 36px -18px 
            color color alpha - (80%) //gamma - (40%)
            padding 12px 12px 12px 20px
            position relative
        li:nth-child(odd) 
            background light - 60 // gamma  + (60%) 

.holy-grail ul li::before, .holy-grail ul li::after 

    border-radius 50%
    content ''
    position absolute
    transform translateY(-50%)
    top  50%
.holy-grail ul li::before   
    background inherit
    content ''
    height 100% 
    left -20px //- 24px
    //width 40px
    height 100% //24px 
    left -18px //-16px
    width 60px
    z-index -1
.holy-grail ul li::after   
    background #000 //light
    height 18px
    top  50%
    left -10px //-16px
    width 18px

