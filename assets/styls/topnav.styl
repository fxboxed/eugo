.topnav.country-dropdown
    display grid
    gap 8px
    grid-template-columns:  repeat(auto-fill, minmax(100px, 1fr));
    height 0
    margin-top -60px
    max-width 400px
    padding-bottom 16px
    position absolute
    transform scale(0)
    width 100%
    a 
        background rgba(0,0,0,0.2)
        //border 1px solid light
        color light //+ 20 //- (90%)//alpha
        font-weight bold
        padding 6px 8px //20px
        text-decoration underline
.topnav.country-dropdown.show-country-list
    height auto
    //padding-bottom 40px
    transform scale(1)
    transition all 0.5s
    z-index 100
@media(min-width 600px)
    .banner 
        margin 120px auto 0
    .topnav.country-dropdown
        margin-top 0
        max-width 600px